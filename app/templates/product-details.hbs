{{page-title @model.name}}

<Ui::Page @title={{t "routes.product-details.title"}}>
  <div local-class="products">
    <div local-class="product-details">
      <Products::Product::Details @product={{@model}} />
    </div>

    <div local-class="actions">
      <LinkTo @route="products" data-test-link="Back">
        {{t "routes.product-details.back"}}
      </LinkTo>
    </div>
  </div>
</Ui::Page>